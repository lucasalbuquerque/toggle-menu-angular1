body
  margin 0px
  padding 0px
  background #fbfafa

*
  margin 0px
  padding 0px


#main
  width 300px

  &:hover
    width 600px

nav
    position fixed
    background #2e353d

.animate
    transition all linear 0.2s
    height 100%
    width 250px

.ng-hide
    margin-left -250px


.brand
    height: 65px;
    font-size: 18px;
    line-height: 60px;
    background: #23282e;


nav ul
    position: absolute;
    top: 50;
    width: 250px;
    margin: 0;
    padding: 0;
    list-style: none;

nav ul li
  list-style none

nav a
  color #fff
  font-size 15px
  text-decoration none
  font-family Verdana
  letter-spacing -1px
  line-height 35px
  margin-left 30px

  &:hover
    background #4f5b69

nav i
  margin-right 10px

.mostramenu
    position: absolute;
    right: 0px;
    background: #000;
    border: none;
    padding: 5px;
    margin-right: 30px;

.container
  margin 0 auto
  width 1170px
